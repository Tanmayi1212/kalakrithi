rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ============================================
    // COLLECTION GROUP QUERIES
    // ============================================
    match /{path=**}/bookings/{booking} {
      allow read: if true;
      allow write: if isAdmin(); // Explicitly allow admins to update/verify (e.g. paymentStatus)
    }

    // ============================================
    // WORKSHOPS COLLECTION
    // ============================================
    match /workshops/{workshopId} {
      allow read: if true;
      allow write: if isAdmin();

      // SLOTS SUBCOLLECTION
      match /slots/{slotId} {
        allow read: if true;
        allow write: if isAdmin();
        
        // Allow updates to currentBookings during transaction
        allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentBookings']) 
                      && request.resource.data.currentBookings == resource.data.get('currentBookings', 0) + 1;

        // BOOKINGS SUBCOLLECTION (Keep this for detailed path access if needed)
        match /bookings/{rollNumber} {
          allow read: if true;
          allow create: if true;
        }
      }
    }

    // ============================================
    // ADMINS
    // ============================================
    match /admins/{uid} {
      allow read: if isAuthenticated() && request.auth.uid == uid;
      allow write: if false; // Admins are created manually in console
    }

    // ============================================
    // DEFAULT DENY
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
